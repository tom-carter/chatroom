<h1>Welcome to the chat room, <%= current_user.handle %>!</h1>

<h4>Users</h4>

<%= turbo_stream_from "users" %>
<div id="users">
  <%= render @users %>
</div>

<h4>Messages</h4>
<%= turbo_stream_from "messages" %>
<div id="messages">
  <%= render @messages %>
</div>

<div class="form-group">
  <%= form_with(model: [@message], remote: true ) do |f| %>
    <%= f.text_field :body, id: 'chat-text', class: "form-control", autocomplete: 'off' %>
    <%= f.submit data: { disable_with: false }, class: "btn btn-primary" %>
  <% end %>
</div>

